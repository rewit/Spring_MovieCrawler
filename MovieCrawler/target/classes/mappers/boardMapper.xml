<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 다른 mapper와 중복되지 않도록 네임스페이스 기재 -->
<mapper namespace="board">
	<!-- 레코드 갯수 계산 -->
	<select id="countArticle" resultType="int">
		SELECT COUNT(*)
		FROM tbl_board
		<include refid="search"/>
	</select>
	
	<sql id="search">
		<choose>
			<when test="search_option != 'all'">
				<if test="search_option == 'title'">
					WHERE title LIKE #{keyword}
				</if>
				<if test="search_option == 'writer'">
					WHERE title LIKE #{keyword}
				</if>
				<if test="search_option == 'content'">
					WHERE title LIKE #{keyword}
				</if>
			</when>
			<otherwise>
			     WHERE writer LIKE #{keyword}
					OR title LIKE #{keyword}
					OR content LIKE #{keyword}
			</otherwise>
		</choose>
	</sql>
	
	<!-- 게시글 목록 출력 -->
	
	<select id="listAll"
		resultType="com.movie.domain.board.BoardDTO">
		<include refid="paging_header" />
		SELECT *
		FROM tbl_board
		<include refid="search" />
		<if test="sort_option == 'new'">
			ORDER BY bno DESC
		</if>
		<if test="sort_option == 'reply'">
			ORDER BY replycnt DESC, bno DESC
		</if>
		<if test="sort_option == 'view'">
			ORDER BY viewcnt DESC, bno DESC
		</if>
		<include refid="paging_footer" />
	</select>

	<sql id="paging_header">
		SELECT *
		FROM (
		SELECT rownum AS rnum, A.*
		FROM (
	</sql>
	<sql id="paging_footer">
		) A
		) WHERE rnum BETWEEN #{start} AND #{end}
	</sql>

	<select id="read" resultType="com.movie.domain.board.BoardDTO">
		SELECT * FROM tbl_board
		WHERE bno =
		#{bno}
	</select>
	<!-- 댓글수 +1 -->
	<update id="updateReplyCnt">
		UPDATE tbl_board
		<if test="flag == 'insert'">
		SET replycnt = replycnt+1
		</if>
		<if test="flag == 'delete'">
		SET replycnt = replycnt-1
		</if>
		WHERE bno=#{bno}
	</update>
	
	<!-- 조회수 1증가 -->
	<update id="increaseCnt" parameterType="int">
		UPDATE tbl_board
		SET viewcnt = viewcnt+1
		WHERE bno =#{bno}
	</update>
	<insert id="wrtie">
	</insert>
	<!-- 게시글등록 -->
	<insert id="write" parameterType="com.movie.domain.board.BoardDTO">
		INSERT INTO tbl_board(bno,title,content,write)
		VALUES(seq_board.NEXTVAL,#{title},#{content},#{write})
	<selectKey keyProperty="bno" resultType="Integer" order="AFTER">
		SELECT seq_board.CURRVAL FROM dual
	</selectKey>
	</insert>
</mapper>